@page
@model CRUDAPP.Pages.Funds.IndexModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

<h1>
    Fund
    <span style="float: right;padding-left:10px;"> from  @Model.TotalMember memebers</span>
    <span style="float: right;">Total Fund : @Model.TotalAmount</span>
</h1>
<form method="post">
    <p>
        <a asp-page="Create">Create New</a>
        <div class="form-group">
            <div class="row col-md-12">
               
                <div class="col-md-3"> <select asp-for="FundForm.festivalId" class="form-control" asp-items="Model.Festives"></select></div>
                <div class="col-md-3"> <select asp-for="FundForm.fundForYear" class="form-control" asp-items="Model.Year"></select></div>
                <div class="col-md-3"> <input asp-for="FundForm.givenToName" class="form-control" placeholder="Search..." /></div>
                <div class="col-md-3"> <input type="submit" value="Submit" class="btn btn-primary" /></div>
                
            </div>
        </div>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Fund[0].FundDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fund[0].FundGivenTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fund[0].FundGivenBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fund[0].PersonsForFood)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fund[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fund[0].FoodAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fund[0].TotalAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Fund)
        {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.FundDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.givenToName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.givenByName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonsForFood)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>

<h1>
    Fund remaining from
   
</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Flat Number
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Member)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FlatNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>

        }
    </tbody>

</table>

